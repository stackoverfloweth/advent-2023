{
  "root": true,
  "env": {
    "node": true
  },
  "parserOptions": {
    "ecmaVersion": "latest",
    "project": ["./tsconfig.json"],
    "sourceType": "module",
    "parser": "@typescript-eslint/parser"
  },
  "extends": [
    "@prefecthq"
  ],
  "ignorePatterns": [
    "*.config.ts"
  ],
  "globals": {
    "defineProps": "readonly",
    "defineEmits": "readonly",
    "defineExpose": "readonly"
  },
  "settings": {
    "import/resolver": {
      "typescript": {
        "project": "./tsconfig.json"
      }
    }
  },
  "rules": {
    "no-relative-import-paths/no-relative-import-paths": "off"
  }
}